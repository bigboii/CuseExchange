<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/syracuse_orange</item>
        <item name="colorPrimaryDark">@color/syracuse_darkorange</item>
        <item name="colorAccent">@color/syracuse_gray1</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <style name="AppTheme_Dark_Dialog" parent="AlertDialog.AppCompat">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TextLabel" parent="Theme.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/syracuse_gray3</item>
        <item name="android:textSize">18sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/syracuse_gray3</item>
        <item name="colorControlNormal">@color/syracuse_gray3</item>
        <item name="colorControlActivated">@color/syracuse_orange</item>
    </style>
    <style name="TextLabel_MyAccount" parent="Theme.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/syracuse_orange</item>
        <item name="android:textSize">18sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/syracuse_orange</item>
        <item name="colorControlNormal">@color/syracuse_orange</item>
        <item name="colorControlActivated">@color/syracuse_orange</item>
    </style>
</resources>
